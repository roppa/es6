{
    "env": {
        "node": true,
        "es6": true,
        "browser": true,
        "mocha": true
    },
    "globals": {
        "$": false
    },
    "plugins": [
    ],
    "extends": "eslint:recommended",
    "rules": {
        "block-scoped-var": 2,
        "brace-style": 2,
        "comma-spacing": [
            0,
            {
                "before": true,
                "after": true
            }
        ],
        "complexity": [
            1,
            4
        ],
        "dot-notation": 2,
        "eol-last": 2,
        "indent": [
            2,
            2
        ],
        "max-len": [
            1,
            120
        ],
        "new-cap": 0,
        "no-trailing-spaces": 2,
        "no-underscore-dangle": 0,
        "no-unused-expressions": 2,
        "no-unused-vars": [
            2,
            {
                "args": "none"
            }
        ],
        "quotes": [
            2,
            "single",
            "avoid-escape"
        ],
        "linebreak-style": [
            2,
            "unix"
        ],
        "semi": [
            2,
            "always"
        ],
        "space-after-keywords": 2,
        "space-before-blocks": 2,
        "strict": [
            2,
            "global"
        ]
    }
}
